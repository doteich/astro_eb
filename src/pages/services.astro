---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import FeaturesTimeline from "@/components/sections/features/FeaturesTimeline.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";

import excavator1 from "@images/excavator1.jpg";
import excavator2 from "@images/excavator2.jpg";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Bauleitung",
    subTitle:
      "Das Management eines Bauprojekts kann überwältigend sein. Mit unseren professionellen Beratungsdiensten begleiten wir Sie durch jede Phase und stellen sicher, dass Sie fundierte Entscheidungen treffen. Egal, ob Sie ein Heimwerker oder ein erfahrener Bauunternehmer sind, wir bieten Ihnen eine maßgeschneiderte Leitung Ihres Bauvorhabens an. Zusammen mit Ihnen planen wir den Bauablauf, koordinieren Dienstleister und stimmen uns mit dem Bauträger ab. Ob private Bauherren, Architekten, Bauträger oder Projektierungsbüros, wir beraten Sie bei bautechnischen Fragen.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    imgTwo: underConstruction,
    imgTwoAlt: "Brown and gray building under construction",
  },
  {
    isRightSection: false,
    title: "Bauleistung",
    subTitle:
      "Neben der Planung von Bauprojekten, setzen wir diese auch erfolgreich um. Von kleineren Installationen bis hin zu umfangreichen Bauarbeiten bietet Eichhornbau zuverlässige Baudienstleistungen an, um Ihre Pläne in greifbare Ergebnisse zu verwandeln. Unser Spezialgebiet ist der Beton- und Erdbau. Dazu zählen die Betonierung von Boden- und Deckenelementen, die Planung und Verbau von Schalung, betonieren von Fundamenten und generelle Ausbesserungsarbeiten. Sprechen Sie uns für Ihr konkretes Anliegen direkt an.",
    img: constructionWorkers,
    imgAlt: "Construction site before and after",
    btnExists: false,
    btnTitle: "Learn More",
  },
  {
    isRightSection: true,
    title: "Erdbauarbeiten",
    subTitle:
      "Wir unterstützen Sie, damit ihr Bauvorhaben auf solidem Grund steht. Vom Aushub für ein Wohnhaus, die Geländeanpassung für Gewerbeflächen oder die Vorbereitung von Baugrund wir haben das Know-How und die technischen Fähigkeiten es umzusetzen. Konkret bieten wir Bagger- und Planierarbeiten für Ihr Infrastrukturprojekt an. Sprechen Sie uns an bringen den Boden in Bewegung!",
    single: false,
    imgOne: excavator1,
    imgOneAlt: "Construction workers orchestrating a project",
    imgTwo: excavator2,
    imgTwoAlt: "Aerial view of managed construction",
  },
];

const pageTitle: string = `Dienstleistungen | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://eichhornbau.de/services",
    url: "https://eichhornbau.de/services",
    name: "Dienstleistungen | Eichhornbau",
    description:
      "Mit über 30 Jahren Erfahrung in der Baubranche sind wir der richtige Ansprechpartner für Ihr Bauanliegen. Ob Großprojekt oder persönliches Vorhaben, wir unterstützen Sie. Überzeugen Sie sich untenstehend von unserem Dienstleistungsportfolio.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://eichhornbau.de",
      name: "Eichhornbau",
      description:
        "Eichhornbau ist ihr zuverlässiger Partner rund um das Thema Bauen",
    },
    inLanguage: "de-DE",
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Verbinden Sie unsere Expertise mit Ihrer Vision"
    subTitle="Mit über 30 Jahren Erfahrung in der Baubranche sind wir der richtige Ansprechpartner für Ihr Bauanliegen. Ob Großprojekt oder persönliches Vorhaben, wir unterstützen Sie. Überzeugen Sie sich untenstehend von unserem Dienstleistungsportfolio."
    btnExists={true}
    btnTitle="Kontaktieren Sie uns"
    btnURL="/contact"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
 


  <FeaturesTimeline
  title="Ihr Anliegen, unser Vorgehen"
  subTitle="Unsere Dienstleistungen haben Sie überzeugt? Sie planen eine Anfrage über die Website oder E-Mail an uns zu stellen? Damit ihr individuelles Vorhaben gleich von Anfang bestens Betreut wird, sieht ein typischer Vorplanungsprozess bei uns so aus."
    events={[
      {
        heading: "Vorbereitung",
        content: "Auf Basis Ihrer Anfrage stecken wir zunächst grob die Parameter ab, um uns mit einer fundierten Schätzung innerhalb von wenigen Werktagen bei Ihnen zu melden. ",
        svg: "envelope"
      },
      {
        heading: "Vorbesprechung",
        content: "Wir besprechen mit Ihnen die Details Ihres Anliegens, planen weitere Schritte und stellen Rückfragen.",
        svg: "chatbubble"
      },
      {
        heading: "Feinplanung",
        content: "Der persönliche Kontakt ist uns wichtig. Wir schauen uns mit Ihnen gemeinsam das Bauvorhaben an und klären Feinheiten, um Ihnen ein präzises Angebot zu stellen.",
        svg: "magification"
      },
      {
        heading: "Angebot",
        content: "Wir stellen Ihnen ein sauber aufgeschlüsseltes Angebot. Dazu zählen einen Mengengerüst und eine Baukalkulation.",
        svg: "pen"
      },
      {
        heading: "Umsetzung",
        content: "Wir setzen den Plan in die Tat um. Im Bauverlauf nehmen wir Sie mit und besprechen wichtige Entscheidungen und Meilensteine mit Ihnen.",
        svg: "home"
      },
    ]}
  />
</MainLayout>
