---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import FeaturesReferences from "@/components/sections/features/FeaturesReferences.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import company from "@images/company.jpg";
import profilePic from "@images/profile_pic.jpg";

import excavator1 from "@images/excavator1.jpg";
import excavator2 from "@images/excavator2.jpg";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Ralf Eichhorn",
    subTitle:
      "<span style='font-style:italic'>Dipl. Ing. (FH)</span> <br> <br> Nach erfolgreichem Studium des Bergbau und Tiefbaus, began 1992 mein Einstieg in das Baugewerbe. Es folgten viele Großprojekte im Wohn- und Industrieumfeld für Radmer Bau und die PORR AG, bis 2019 der Entschluss zur Selbstständigkeit fiel. Aufbauend auf meiner umfassenden Erfahrung und meines Netzwerks in der Baubranche berate, leite und setze ich Bauprojekte um. Dabei immer mit dem eigenen Anspruch die bestmöglichen Resultate zu liefern.",
    single: true,
    imgOne: profilePic,
    imgOneAlt: "Ralf Eichhorn in front of construction site.",
    imgTwo: underConstruction,
    imgTwoAlt: "Brown and gray building under construction",
  },
  {
    isRightSection: false,
    title: "Das Unternehmen",
    subTitle:
      "Vom kleinen Örtchen Kriebitzsch in Thüringen zur nächsten Großbaustelle. Mit der Ausgründung von Eichhorn Bau- und Baumanagement im Jahr 2020 began unsere Reise im Baugewerbe an unserem Büro- und Lagerstandort in der Hauptstraße 26A in Kriebitzsch. Von hier aus betreuen wir Kunden hauptsächlich im Raum Leipzig und Altenburg. Doch auch darüber hinaus stehen wir für Ihr Anliegen zur Verfügung. Sprechen Sie uns dazu einfach über unsere verschiedenen Kanäle an.",
    img: company,
    imgAlt: "Eichhornbau company emblem on office wall",
    btnExists: false,
    btnTitle: "Learn More",
  }

];

const pageTitle: string = `Unternehmen | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://eichhornbau.de/services",
    url: "https://eichhornbau.de/services",
    name: "Unternehmen | Eichhornbau",
    description:
      "Uniting expertise with your vision, Eichhornbau provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://eichhornbau.de",
      name: "Eichhornbau",
      description:
        "Eichhornbau ist ihr zuverlässiger Partner rund um das Thema Bauen",
    },
    inLanguage: "de-DE",
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->

  <MainSection
  title="Ihr Partner für Baudienstleistungen"
  subTitle="Bauen ist für uns Alltagsgeschäft. Mit jahrelanger Erfahrung in Bauprojekten von Wohnimmobilien und Industriebauwerken sind wir Ihr Partner für Baudienstleistungen. Erfahren Sie mehr über den Übersprung unserer Expertise, unsere Referenzprojekte und das Gesicht hinter Eichhornbau."
  btnExists={false}

/>

  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesReferences
  title="Referenzprojekte"
  subTitle="Diese und noch mehr Bauprojekte haben wir erfolgreich umgesetzt."
    references={[
      {
        heading: "Austauschen Deckenelement Gießerei",
        content: "Austausch von tragenden Boden-/Deckenelementen. Abtragen des beschädigten Bauteils. Schalung und Betonierung des Austauschelements.",
        date: "2020"
      },
      {
        heading: "Straßenerneuerung Gießerei",
        content: "Erneuerung des Straßenbelags",
        date: "2022"
      },
      {
        heading: "Parkhaus Leipzig",
        content: "Führenden Bauleitungsfunktion beim Bau eines mehrstöckigen Parkhauses. Koordination von Dienstleistern und Bauherren.",
        date: "2022"
      },
      {
        heading: "Sanitärtrakt Gießerei",
        content: "Bauträger und Koordinator bei der Erneuerung eines Sanitärtrakts im industriellen Umfeld.",
        date: "2023"
      },
      {
        heading: "Parkhaus Nürnberg",
        content: "Führenden Bauleitungsfunktion beim Bau eines mehrstöckigen Parkhauses. Koordination von Dienstleistern und Bauherren.",
        date: "2024"
      },
    ]}
  />



</MainLayout>
