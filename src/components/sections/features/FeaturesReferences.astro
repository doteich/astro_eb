---


const { title, subTitle, references } = Astro.props;

interface Reference {
    heading: string;
    date: string
    content: string;
    
}

interface Props {
    title?: string;
    subTitle?: string;
    references?: Reference[];
    src?: any;
    alt?: string;
}
---

<section
    class="mx-auto flex flex-col items-center px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
>
    <h2
        class="mb-4 text-balance text-4xl font-extrabold tracking-tight text-neutral-800 dark:text-neutral-200"
    >
        {title}
    </h2>
    <p
        class="mb-5 max-w-prose text-pretty font-light text-neutral-600 dark:text-neutral-400 sm:text-xl"
    >
        {subTitle}
    </p>
    <div class="mx-auto py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full ">
        <ol>
            {
                references?.map((e) => {
                    return (
                        <li class="mb-10 rounded-xl bg-neutral-100 dark:bg-white/[.075] p-6">
                            <span class="">
                                {/* <svg
                                    class="text-blue-800 h-2.5 w-2.5 dark:text-blue-300"
                                    aria-hidden="true"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="white"
                                    viewBox="0 0 20 20"
                                >
                                    <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z" />
                                </svg> */}
                           

                            </span>
                            <h3 class="text-balance px-4 text-xl font-extrabold tracking-tight text-neutral-900 dark:text-neutral-200">
                                {e.heading}
                            </h3>
                            <p class="mb-3 px-4 font-bold italic text-neutral-600 dark:text-neutral-400">{e.date}</p>
                            <p class="mb-5 max-w-prose text-pretty px-4 font-light text-neutral-600 dark:text-neutral-400 sm:text-xl">
                                {e.content}
                            </p>
                        </li>
                    );
                })
            }
        </ol>
    </div>
</section>
